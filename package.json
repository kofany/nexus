{
  "name": "nexusirc",
  "description": "NexusIRC - A heavily modified fork of The Lounge with erssi/irssi fe-web protocol support and weechat relay for incoming clients",
  "version": "4.4.3",
  "type": "module",
  "preferGlobal": true,
  "bin": "index.mjs",
  "packageManager": "yarn@4.10.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/outragelabs/nexusirc.git"
  },
  "homepage": "https://github.com/outragelabs/nexusirc/",
  "scripts": {
    "build:client": "cross-env NODE_OPTIONS='--import tsx/esm' yarn webpack",
    "build:server": "tsc -p server/tsconfig.json",
    "build": "cross-env NODE_NO_WARNINGS=1 run-p --aggregate-output build:client build:server",
    "coverage": "run-s test:* && nyc --nycrc-path=test/.nycrc-report.json report",
    "dev": "cross-env NODE_ENV=development ts-node --project server/tsconfig.json server/index.ts start --dev",
    "format:prettier": "prettier --ignore-unknown --write \"**/*.*\"",
    "generate:config:doc": "ts-node scripts/generate-config-doc.js",
    "lint:check-eslint": "eslint-config-prettier .eslintrc.cjs",
    "lint:eslint": "eslint . --report-unused-disable-directives --color",
    "lint:prettier": "prettier --ignore-unknown --list-different \"**/*.*\"",
    "lint:stylelint": "stylelint --color \"client/**/*.css\"",
    "lint": "run-p --aggregate-output --continue-on-error lint:check-eslint lint:eslint lint:prettier lint:stylelint",
    "start": "node index.mjs start",
    "test": "run-p --aggregate-output --continue-on-error lint:check-eslint lint:eslint lint:prettier lint:stylelint test:mocha",
    "test:mocha": "cross-env NODE_OPTIONS='--import tsx/esm' webpack --mode=development && cross-env NODE_ENV=test TS_NODE_PROJECT='./test/tsconfig.json' mocha --config=test/.mocharc.yml 'test/**/*.ts'",
    "test:nospec": "cross-env NODE_OPTIONS='--import tsx/esm' webpack --mode=development && cross-env NODE_ENV=test TS_NODE_PROJECT='./test/tsconfig.json' mocha --config=test/.mocharc.yml",
    "watch": "cross-env NODE_OPTIONS='--import tsx/esm' webpack --watch",
    "githooks-install": "git config core.hooksPath scripts/git-hooks"
  },
  "keywords": [
    "lounge",
    "nexusirc",
    "browser",
    "web",
    "chat",
    "client",
    "irc",
    "irssi",
    "weechat",
    "server"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "./.nexusirc_home",
    "./index.mjs",
    "./yarn.lock",
    "./client/index.html.tpl",
    "./dist/package.json",
    "./dist/**/*.js",
    "./public/**"
  ],
  "dependencies": {
    "@fastify/busboy": "3.2.0",
    "@peculiar/webcrypto": "^1.5.0",
    "@peculiar/x509": "^1.14.0",
    "bcrypt": "6.0.0",
    "better-sqlite3": "12.4.1",
    "chalk": "5.6.2",
    "cheerio": "1.1.2",
    "commander": "14.0.2",
    "content-disposition": "0.5.4",
    "express": "^5.1.0",
    "file-type": "21.1.0",
    "filenamify": "7.0.1",
    "got": "14.6.4",
    "ldapts": "8.0.9",
    "linkify-it": "5.0.0",
    "lodash": "4.17.21",
    "mime-types": "3.0.1",
    "package-json": "10.0.1",
    "read": "5.0.1",
    "read-chunk": "5.0.0",
    "semver": "7.7.3",
    "socket.io": "4.8.1",
    "tlds": "1.261.0",
    "ua-parser-js": "2.0.6",
    "uuid": "13.0.0",
    "web-push": "3.6.7"
  },
